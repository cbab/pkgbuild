# Maintainer: Christian Babeux <christian.babeux@0x80.ca> 
pkgname=sysdig
pkgver=0.1.93
pkgrel=1
pkgdesc="Open source system-level exploration and troubleshooting tool"
arch=('i686' 'x86_64')
url="http://www.sysdig.org/"
license=('GPL2')
depends=('linux-headers' 'dkms')
makedepends=('git' 'cmake')
source=("https://github.com/draios/sysdig/archive/$pkgver.tar.gz")
sha1sums=('0a714617cac63667a06e327b48ac21aabe6fab8b')
install=${pkgname}.install

build()
{
    cd ${srcdir}/${pkgname}-${pkgver}
    rm -rf build
    mkdir build
    cd build
    cmake -DCMAKE_INSTALL_PREFIX=/usr -DDIR_ETC=/etc -DSYSDIG_VERSION=${pkgver} ..
    make
}

package()
{
    cd ${srcdir}/${pkgname}-${pkgver}
    cd build
    make install DESTDIR=${pkgdir}
}
