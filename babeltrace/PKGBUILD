# Contributor: Manuel Mendez <mmendez534 at gmail dot com>

pkgname=babeltrace
pkgver=1.0.2
pkgrel=1
pkgdesc="command-line trace reader for LTTng"
arch=('i686' 'x86_64')
url="http://lttng.org/"
license=('GPL' 'MIT')
depends=('liburcu' 'popt' 'util-linux' 'glib2>=2.22.0')
source=(http://lttng.org/files/$pkgname/$pkgname-$pkgver.tar.bz2)
install='babeltrace.install'
sha1sums=('7e41f2f6c629a4d0cdc322688e5be5d77da8debf')

build()
{
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

package()
{
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
	mkdir -p "$pkgdir"/usr/share/licenses/$pkgname
	cp mit-license.txt "$pkgdir"/usr/share/licenses/$pkgname
}
