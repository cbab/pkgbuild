# Maintainer: Christian Babeux <christian.babeux@0x80.ca>

pkgname=irssi-otr4-git
pkgver=20121206
pkgrel=1
pkgdesc="Off-the-Record Messaging (OTR) for the Irssi IRC client"
arch=('i686' 'x86_64')
url="https://github.com/cryptodotis/irssi-otr"
license=('GPL2')
depends=('libotr>=4.0.0' 'irssi>=0.8.15' 'libgcrypt>=1.5.0' 'glib2')

_gitroot="git://github.com/cryptodotis/irssi-otr.git"
_gitname="irssi-otr"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  ./bootstrap
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir" install
}